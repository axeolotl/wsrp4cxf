<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

	<portlet>
        <description>WSRP4J Test Portlet Description</description>
        <portlet-name>WSRP4JTestPortlet</portlet-name>
        <display-name>WSRP4J Test Portlet</display-name>

        <portlet-class>org.apache.wsrp4j.testportlet.TestPortlet</portlet-class>

        <expiration-cache>-1</expiration-cache>

        <supports>
			<mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
		</supports>

        <supported-locale>en</supported-locale>
        <supported-locale>es</supported-locale>
        <resource-bundle>TestPortlet</resource-bundle>

		<portlet-info>
			<title>WSRP4J Test Portlet</title>
			<short-title>WSRP4J Test</short-title>
			<keywords>WSRP, WSRP4J, Test</keywords>
        </portlet-info>
	</portlet>
 </portlet-app>
 